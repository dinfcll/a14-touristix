@{
    ViewBag.Title = "Index";
}

@Styles.Render("~/Content/css/Televersement.css")

<form id="FileForm">
    Choisir image: <input type='file' id='Fichier' accept="image/*"> <input type='button' id='Envoyer' value='Envoyer' data-toggle="modal" data-target="#myModal">
    
    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="PopUp" id="Boite de contenu">
            <img id="Aperçu"/>
            <div class="progress" id="Contenantprogressbar">
              <div class="progress bar" role="progressbar" style="width: 10%; height=100%" id="Barre de progression">
                0%
              </div>
            </div>
            <a class="btn btn-default" id="BoutonVoirImage" href="">Voir Image</a>
            <button class="btn btn-default" data-dismiss="modal" id="BoutonFermer">Fermer</button>
            <label id="LabelNomImage">Nom image</label>
        </div>
    </div>
</form>

<script type="text/javascript" src="/Scripts/Téléversement.js"></script>
