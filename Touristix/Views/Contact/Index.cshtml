@model IEnumerable<Touristix.Models.ContactDB>

@{
    ViewBag.Title = "Index";
}

<h2>Commentaires</h2>

<table>
    <tr>
        <th>
            @Html.DisplayName("#")
        </th>
        <th>
            @Html.DisplayName("Nom")
        </th>
        <th>
            @Html.DisplayName("Courriel")
        </th>
        <th>
            @Html.DisplayName("Catégorie")
        </th>     
        <th>
            @Html.DisplayName("Commentaires")
        </th> 
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.id)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.nom)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.courriel)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.categorie)
        </td> 
        <td>
            @Html.DisplayFor(modelItem => item.commentaires)
        </td>     
        <td>           
            @Html.ActionLink("Effacer", "Effacer", new { id=item.id })
        </td>
    </tr>
}
</table>

