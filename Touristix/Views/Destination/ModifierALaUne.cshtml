@model Touristix.Models.ALaUneModel

@{
    ViewBag.Title = "Modifier";
}

<h2>Modifier</h2>

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Modifier la description</legend>

        <div>
            <img src="/Images/Destinations/@Model.DestinationModel.Image" onerror="ErreurImage(this)" alt="aucune image disponible"/>
        </div>

        <div>
            <h4>@Model.DestinationModel.Nom</h4>
            <b>Ville</b><br />
            @Model.DestinationModel.Ville<br /><br />
            <b>Région</b><br />
            @Model.DestinationModel.Region<br /><br />
            <b>Pays</b> <br />
            @Model.DestinationModel.Pays<br /><br />
        </div>

        @Html.HiddenFor(model => model.ALaUneId)

        <div class="editor-label">
            @Html.LabelFor(model => model.Description)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Description)
            @Html.ValidationMessageFor(model => model.Description)
        </div>

        <p>
            <input type="submit" value="Modifier" class="btn btn-default" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Retour à l'index", "Admin")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
