@model Touristix.Models.ALaUneModel

@{
    ViewBag.Title = "Modifier";
}

<h2>ModifierALAUne</h2>

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Modifier la description</legend>

        <div>
            <img src="/Images/Destinations/@Model.DestinationModel.Image" onerror="ErreurImage(this)" alt="aucune image disponible"/>
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Description)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Description)
            @Html.ValidationMessageFor(model => model.Description)
        </div>

        <p>
            <input type="submit" value="Modifier" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Retour à l'index", "Admin")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
