@if (Request.IsAuthenticated) {
    <text>
        @Html.ActionLink("Modifier le mot de passe", "Manage", "Account", routeValues: null, htmlAttributes: new { @class = "username", title = "Manage" })
        &emsp;&emsp;
    </text>
    
    if (User.IsInRole("admin"))
    {
        @Html.ActionLink("Administrer", "Index", "Admin", routeValues: null, htmlAttributes: new { id = "gererLink" })
        <br />
        @Html.ActionLink("Contacts", "Index", "Contact", routeValues: null, htmlAttributes: new { id = "contactLink" })
    }
    
    <text>
        @using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm" }))
        {
            @Html.AntiForgeryToken()
            <a href="javascript:document.getElementById('logoutForm').submit()">Se déconnecter</a>
        }
    </text>
}
else
{
    <ul>
        @Html.ActionLink("Se connecter", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })
    </ul>
}
