<!DOCTYPE HTML>
<html>
    <head>
         <meta charset="utf-8" />
         <meta name="viewport" content="width=device-width" />
         <title>@ViewBag.Title</title>
         @Styles.Render("~/Content/bootstrapcss")
    </head>
    <header>
            <div class="content-wrapper">
                <div class="float-left">
                    <p class="site-title">@Html.ActionLink("Touristix", "Index", "Accueil")</p>
                </div>
                <div class="float-right">
                    <section id="login">
                        @Html.Partial("_LoginPartial")
                    </section>
                    <nav>
                        <ul id="menu">
                            <li>@Html.ActionLink("Accueil", "Index", "Accueil")</li>
                            <li>@Html.ActionLink("Destinations", "Index", "Destination")</li>
                            <li>@Html.ActionLink("Nous Contacter", "ContactForm", "Contact")</li>
                        </ul>
                    </nav>
                </div>
    </header>
    <body>
        <div class="container-fluid">
            <div class="span3">
            </div>
            <div class="span6">
                @RenderSection("featured", required: false)
                @RenderBody()
            </div>
            <div class="span3">
            </div>
        </div>
        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrapjs")
        @RenderSection("scripts", required: false)
    </body>
</html>
